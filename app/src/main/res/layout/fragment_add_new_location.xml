<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.osamamac.taskmanager.Fragments.AddNewLocationFragment">

    <fragment
        android:id="@+id/addnewLocationPlaceAutoCompleteFragment"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
        />

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/addnewLocationMapFragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_below="@id/addnewLocationPlaceAutoCompleteFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_menu_send"
        android:layout_margin="16dp"
        android:id="@+id/addNewPlaceFloatingButton"
        android:visibility="invisible"/>

</RelativeLayout>
